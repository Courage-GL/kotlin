<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/advertise_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"
        />

    <RelativeLayout
        android:id="@+id/skip_view_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/welcome_detail_time"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="10dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/advertise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:textColor="@color/white"
            android:textSize="@dimen/design_bottom_navigation_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/advertise_time"
            android:text="跳过"
            android:textColor="@color/white"
            android:textSize="@dimen/design_bottom_navigation_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/see_details_rl"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/welcome_detail_time">

        <TextView
            android:gravity="center"
            android:id="@+id/welcome_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="查看详情 >"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>
